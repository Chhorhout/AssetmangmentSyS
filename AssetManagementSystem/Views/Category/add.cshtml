@model Category

<form asp-action="Add" class="needs-validation" novalidate>
	<div class="card">
		<div class="card-header bg-primary text-white">
			<h5 class="mb-0">Add New Category</h5>
		</div>
		<div class="card-body">
			<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
			
			<div class="mb-3 form-group">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" placeholder="Enter category name" required />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="mb-3 form-group">
				<label asp-for="CreatedBy" class="form-label"></label>
				<input asp-for="CreatedBy" class="form-control" placeholder="Creator's name" required />
				<span asp-validation-for="CreatedBy" class="text-danger"></span>
			</div>

			<div class="mb-3 form-group">
				<label asp-for="Kilogram" class="form-label">
					Kilogram
					<i class="bi bi-info-circle" data-bs-toggle="tooltip" title="Enter the weight in kilograms"></i>
				</label>
				<input asp-for="Kilogram" class="form-control" placeholder="e.g. 10kg" required />
				<span asp-validation-for="Kilogram" class="text-danger"></span>
			</div>

			<div class="mb-3 form-check">
				<input type="checkbox" class="form-check-input" asp-for="Active" />
				<label class="form-check-label" asp-for="Active"></label>
			</div>

			<div class="d-flex justify-content-end">
				<button type="submit" class="btn btn-success me-2">
					<i class="bi bi-save"></i> Save
				</button>
				<a asp-action="Index" class="btn btn-secondary">
					<i class="bi bi-x-circle"></i> Cancel
				</a>
			</div>
		</div>
	</div>
</form>
