@model User

<form asp-action="Update" class="needs-validation" novalidate>
	<div class="card shadow">
		<div class="card-header bg-primary text-white">
			<h5 class="mb-0">Update User</h5>
		</div>
		<div class="card-body">
			<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
			
			<div class="mb-3 form-group">
				<label asp-for="Id" class="form-label"></label>
				<input type="hidden" asp-for="Id" class="form-control" placeholder="Enter asset ID" required />
				<span asp-validation-for="Id" class="text-danger"></span>
			</div>

			<div class="mb-3 form-group">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" placeholder="Enter category name" required />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>


            <div class="mb-3 form-group">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for="Email" class="form-control" placeholder="Enter created by" required />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>


			<div class="mb-3 form-group">
				<label asp-for="Password" class="form-label"></label>
				<input asp-for="Password" class="form-control" placeholder="Enter password" required />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>


            <div class="mb-3 form-group">
				<label asp-for="Role" class="form-label"></label>
				<input asp-for="Role" class="form-control" placeholder="Enter role" required />
				<span asp-validation-for="Role" class="text-danger"></span>
			</div>
            <div class="mb-3 form-group">
				<label asp-for="CreatedAt" class="form-label"></label>
				<input asp-for="CreatedAt" class="form-control" placeholder="Enter created at" required />
				<span asp-validation-for="CreatedAt" class="text-danger"></span>
			</div>

			<div class="mb-3 form-check">
				<input type="checkbox" class="form-check-input" asp-for="Active" />
				<label class="form-check-label" asp-for="Active"></label>
			</div>

			<div class="d-flex justify-content-end">
				<button type="submit" class="btn btn-success me-2">
					<i class="bi bi-save"></i> Save
				</button>
				<a asp-action="Index" class="btn btn-secondary">
					<i class="bi bi-x-circle"></i> Cancel
				</a>
			</div>
		</div>
	</div>
</form>
