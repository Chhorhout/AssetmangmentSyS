@* @model AssetManagementSystem.ViewModels.DashboardVm
<div class="container-fluid py-4">
    <div class="mb-4">
        <h1 class="h2 mb-0 fw-bolder" style="background: linear-gradient(45deg, #4e73df, #224abe); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Dashboard</h1>
    </div>

    <div class="row g-4">
        <!-- Asset Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="Asset" asp-action="Index" class="text-decoration-none">
                <div class="card border-left-primary shadow h-100 py-2 hover-card">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Asset
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAssets</div>
                                <div class="text-xs text-primary">View all assets →</div>
                            </div>
                            <div class="col-auto">
                                <div class="icon-circle bg-primary">
                                    <i class="fas fa-laptop-code fa-2x text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Category Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="Category" asp-action="Index" class="text-decoration-none">
                <div class="card border-left-success shadow h-100 py-2 hover-card">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Categories
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalCategories</div>
                                <div class="text-xs text-success">View all categories →</div>
                            </div>
                            <div class="col-auto">
                                <div class="icon-circle bg-success">
                                    <i class="fas fa-layer-group fa-2x text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- User Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="User" asp-action="Index" class="text-decoration-none">
                <div class="card border-left-info shadow h-100 py-2 hover-card">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Users
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                                <div class="text-xs text-info">View all users →</div>
                            </div>
                            <div class="col-auto">
                                <div class="icon-circle bg-info">
                                    <i class="fas fa-user-shield fa-2x text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Maintainer Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="Maintainer" asp-action="Index" class="text-decoration-none">
                <div class="card border-left-warning shadow h-100 py-2 hover-card">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Maintainer
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalMaintainer</div>
                                <div class="text-xs text-warning">View all maintainers →</div>
                            </div>
                            <div class="col-auto">
                                <div class="icon-circle bg-warning">
                                    <i class="fas fa-tools fa-2x text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    /* Base styles */
    .hover-card {
        transition: all 0.3s ease-in-out;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        cursor: pointer;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .icon-circle {
        height: 4rem;
        width: 4rem;
        border-radius: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease-in-out;
    }

    .hover-card:hover .icon-circle {
        transform: scale(1.1);
    }

    /* Border colors */
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }

    /* Responsive styles */
    @@media (max-width: 576px) {
        .container-fluid {
            padding: 1rem;
        }

        .card-body {
            padding: 1rem;
        }

        .icon-circle {
            height: 3rem;
            width: 3rem;
        }

        .icon-circle i {
            font-size: 1.5rem !important;
        }

        .h5 {
            font-size: 1.25rem;
        }
    }

    @@media (min-width: 577px) and (max-width: 991px) {
        .container-fluid {
            padding: 1.5rem;
        }

        .card-body {
            padding: 1.25rem;
        }

        .icon-circle {
            height: 3.5rem;
            width: 3.5rem;
        }
    }

    @@media (min-width: 992px) {
        .container-fluid {
            padding: 2rem;
        }

        .card-body {
            padding: 1.5rem;
        }
    }

    /* Touch device optimizations */
    @@media (hover: none) {
        .hover-card:hover {
            transform: none;
        }

        .hover-card:active {
            transform: translateY(-2px);
        }

        .hover-card:hover .icon-circle {
            transform: none;
        }

        .hover-card:active .icon-circle {
            transform: scale(1.05);
        }
    }
</style>

 *@
