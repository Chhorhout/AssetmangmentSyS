@model Asset

<form asp-action="Update" class="needs-validation" novalidate>
	<div class="card shadow">
		<div class="card-header bg-primary text-white">
			<h5 class="mb-0">Update Asset</h5>
		</div>
		<div class="card-body">
			<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
			
			<div class="mb-3 form-group">
				<label asp-for="Id" class="form-label"></label>
				<input type="hidden" asp-for="Id" class="form-control" placeholder="Enter asset ID" required />
				<span asp-validation-for="Id" class="text-danger"></span>s
			</div>

			<div class="mb-3 form-group">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" placeholder="Enter asset name" required />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="mb-3 form-group">
				<label asp-for="SerialNumber" class="form-label"></label>
				<input asp-for="SerialNumber" class="form-control" placeholder="Enter serial number" required />
				<span asp-validation-for="SerialNumber" class="text-danger"></span>
			</div>

			<div class="mb-3 form-check">
    			<input type="checkbox" class="form-check-input" asp-for="HaveWarranty" id="HaveWarranty" />
    			<label class="form-check-label" asp-for="HaveWarranty"></label>
			</div>

			<div class="mb-3 form-group">
				<label asp-for="WarrantyStartDate" class="form-label"></label>
				<input type="date" class="form-control" asp-for="WarrantyStartDate" />
				<span asp-validation-for="WarrantyStartDate" class="text-danger"></span>
				<label asp-for="WarrantyEndDate" class="form-label"></label>
				<input type="date" class="form-control" asp-for="WarrantyEndDate" />
				<span asp-validation-for="WarrantyEndDate" class="text-danger"></span>
			</div>
			

			<div class="mb-3 form-check">
				<input type="checkbox" class="form-check-input" asp-for="Active" />
				<label class="form-check-label" asp-for="Active"></label>
			</div>

			<div class="d-flex justify-content-end">
				<button type="submit" class="btn btn-success me-2">
					<i class="bi bi-save"></i> Save
				</button>
				<a asp-action="Index" class="btn btn-secondary">
					<i class="bi bi-x-circle"></i> Cancel
				</a>
			</div>
			
		</div>
	</div>
</form>
